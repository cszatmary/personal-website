{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc",
    "fmt": "prettier --write 'src/**/*.{ts,tsx,scss}'",
    "lint": "eslint --ext=ts,tsx ./src",
    "lint:fix": "eslint --fix --ext=ts,tsx ./src",
    "prepare": "husky install",
    "test": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --coverage --runInBand --colors",
    "test:nocover": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "verify": "yarn lint && yarn check-types && yarn test"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.5",
    "bootstrap": "^4.5.3",
    "devicon": "^2.12.0",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-google-recaptcha": "^2.1.0",
    "react-transition-group": "^4.4.2",
    "reactstrap": "^8.9.0",
    "sass": "^1.37.5",
    "typescript-stdlib": "^0.3.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@shiphub/eslint-config": "^0.0.3",
    "@types/node": "^14.14.21",
    "@types/react": "^17.0.16",
    "@types/react-google-recaptcha": "^2.1.2",
    "@types/react-transition-group": "^4.4.2",
    "@types/reactstrap": "^8.7.2",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "^11.0.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx,scss,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 100
  }
}
